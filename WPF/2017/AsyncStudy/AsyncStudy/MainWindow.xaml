<Window x:Class="AsyncStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncStudy"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="525">
    <StackPanel>
        <TextBlock Margin="5">Text:</TextBlock>
        <TextBox x:Name="txtWebsiteText" Height="250" Margin="5"/>
        <Button x:Name="btnClickMe" Content="Click Me" Click="btnClickMe_Click" Width="200" Margin="10"/>

    </StackPanel>
</Window>
