<Window x:Class="WrapPanelStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <WrapPanel Margin="3">
        <Button VerticalAlignment="Top">Top Button</Button>
        <Button MinHeight="100">Tall Button</Button>
        <Button VerticalAlignment="Bottom">Bottom Button</Button> 
        <Button>Stretched Button</Button>
        <Button VerticalAlignment="Center">Center Button</Button>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="200">Right Button</Button>
    </WrapPanel>
    
</Window>
