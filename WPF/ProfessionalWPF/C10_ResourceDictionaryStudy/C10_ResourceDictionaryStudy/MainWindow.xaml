<Window x:Class="C10_ResourceDictionaryStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:NewResourceDictionary;assembly=NewResourceDictionary"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button  Padding="5" Margin="5" Background="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type res:NewCustomResources}, ResourceId=SadTileBrush}}">No code</Button>
        <Button Background="{DynamicResource {x:Static res:NewCustomResources.SadTileBrush}}"
        Padding="5" Margin="5"
        FontWeight="Bold" FontSize="14">
            A Resource From ResourceLibrary
        </Button>

    </StackPanel>
</Window>
