<Window x:Class="RoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <ListBox Margin="10" Background="BurlyWood" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <ListBoxItem>
                <Border Margin="4"
                        Background="Khaki"
                        Padding="4"
                        CornerRadius="6">
                    <TextBlock>Cats</TextBlock>
                </Border>
            </ListBoxItem>
            <ListBoxItem>
                <Border Margin="4"
                        Background="Khaki"
                        Padding="4"
                        CornerRadius="6">
                    <TextBlock>Dogs</TextBlock>
                </Border>
            </ListBoxItem>
        </ListBox>
    </Grid>
</Window>
