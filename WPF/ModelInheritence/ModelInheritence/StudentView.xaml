<UserControl x:Class="ModelInheritence.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ModelInheritence="clr-namespace:ModelInheritence" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
        <StackPanel Background="LightGreen">
            <ModelInheritence:BaseClassView DataContext="{Binding}"/>
            <Label Content="RollNumber : "/>
            <Label Content="{Binding RollNumber}"/>
        </StackPanel>
    
</UserControl>
